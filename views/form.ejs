<%- include("header.ejs"); %>
<div class="row">
    <div class="col-sm-10 col-md-7" style="margin: auto;">

        <!-- Default form subscription -->
        <form action="/" id="usrform" class="text-center border border-light p-5" enctype="multipart/form-data"
            method="POST">

            <p class="h4 mb-4">Create your TourSpot</p>

            <p>Share your favourite tourist destination with the world!!!</p>

            <p>
                <a href="/tourspots" target="_blank">See all TourSpots</a>
            </p>

            <!-- Name -->
            <input type="text" name="spot[name]" class="form-control mb-4" placeholder="Name" required>

            <!-- location -->
            <input type="text" name="spot[location]" class="form-control mb-4" placeholder="Location">
            <label for="image">Image:</label> <input type="file" accept="image/*" name="image" class="form-control mb-4"
                placeholder="Image" required>
            <textarea style="white-space: pre-wrap;" form="usrform" name="spot[description]" rows="10"
                class="form-control mb-4" placeholder="Enter Description here.."></textarea>
            <!-- <input type="text" class="form-control rounded-0" name="description" placeholder="Description" rows="10"></textarea> -->

            <button class="btn btn-info px-4 py-2 mt-3" type="submit">Submit</button>
    </div>

    <!-- submit -->



    </form>


</div>
</div>

